{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "cortex-debug",
            "name": "Cortex Debug (Windows)",
            "cwd": "${workspaceRoot}",
            "request": "launch",
            "executable": "./build/Debug/motor_control.elf",
            "servertype": "openocd",
            "device": "STM32F446RE",
            "interface": "swd",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f4x.cfg"
            ],
            "svdFile": "./STM32F446.svd",
            "runToEntryPoint": "main",

            /* UPDATED PATHS BELOW */
            
            // Path to the folder containing the executables (bin folder)
            "armToolchainPath": "C:/Program Files (x86)/Arm GNU Toolchain arm-none-eabi/14.3 rel1/bin",

            // Full path to the GDB executable
            "gdbPath": "C:/Program Files (x86)/Arm GNU Toolchain arm-none-eabi/14.3 rel1/bin/arm-none-eabi-gdb.exe",

            "swoConfig": {
                "enabled": true,
                "cpuFrequency": 180000000,
                "swoFrequency": 2000000,
                "source": "probe",
                "decoders": [
                    {
                        "type": "console",
                        "label": "ITM",
                        "port": 0
                    }
                ]
            }
        }
    ]
}